---
import userIcon from "../../public/images/userIcon.svg";
import searchIcon from "../../public/images/searchIcon.svg";
import { Image } from "astro:assets";
---

<section>
  <header>
    <article>
      <p><a href="/index.html">H</a></p>
      <h1><a href="/index.html"><b>HOTEL</b> MIRANDA</a></h1>
    </article>
    <div class="togle">X</div>
    <nav>
      <a href="/about.html">About Us</a>
      <a href="/room.html">Rooms</a>
      <a href="/offer.html">Offers</a>
      <a href="/contact.html">Contact</a>
    </nav>
    <div>
      <Image src={userIcon} alt="User Icon" />
      <Image src={searchIcon} alt="Search Icon" />
    </div>
  </header>
</section>

<style>
  section {
    display: fixed;
  }
  header {
    display: grid;
    grid-template-columns: 1fr 3fr 1fr;
    grid-template-rows: 1fr;
    align-items: center;
    justify-items: start;
    padding: 20px;
    box-shadow: 0px 1px 5px 0px black;
    background-color: #fefefe;
    a {
      text-decoration: none;
      color: black;
    }
    article {
      grid-column: 2/3;
      grid-row: 1/2;
      display: flex;
      align-items: center;
      gap: 5px;
      h1 {
        font-size: 16px;
        font-weight: 400;
        width: 100px;
      }
      p {
        padding: 10px 15px;
        box-shadow: 1px 1px 5px 0px gray;
        font-size: 24px;
        font-weight: bold;
        background-color: white;
      }
    }
    div {
      grid-column: 3/4;
      grid-row: 1/2;
      display: flex;
      gap: 20px;
    }
    nav {
      display: none;
      a:hover {
        color: gold;
        text-decoration: underline;
      }
    }
    .togle {
      grid-column: 1/2;
      grid-row: 1/2;
    }
  }
  @media screen and (min-width: 1024px) {
    header {
      max-width: 95%;
      margin: 0 auto;
      display: flex;
      justify-content: space-around;
      article {
        p {
          font-size: 36px;
        }
        h1 {
          font-size: 24px;
        }
      }
      .togle {
        display: none;
      }
      nav {
        display: flex;
        gap: 20px;
        background-color: white;
        a {
          font-size: 20px;
          font-weight: 700;
        }
      }
    }
  }
</style>
