---
import { gold } from "../layouts/Layout.astro";
const { img } = Astro.props;
---

<article>
  <img src={img} alt="" />
  <div></div>
  <main>
    <h6>Minimal Duplex Room</h6>
    <p>
      Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
      tempor.
    </p>
    <p class="price">$345/Night <span>Book Now</span></p>
  </main>
</article>

<style>
  article {
    color: black;
    background-color: white;
    max-width: 350px;
    img {
      width: 100%;
    }
    main {
      padding: 20px 10px;
      text-align: center;
      h6 {
        font-size: 28px;
        padding-bottom: 10px;
        font-weight: 100;
      }
      p {
        color: #777;
      }
      .price {
        padding: 10px 0;
        color: var(--gold);
        font-weight: bold;
        span {
          color: #aaa;
          padding-left: 5px;
        }
      }
    }
  }
</style>
