---
import { gold } from "../layouts/Layout.astro";
const { img, tittle, text } = Astro.props;
---

<article>
  <img src={img} alt="" />
  <p class="tittle">{tittle}</p>
  <p class="text">
    {text}
  </p>
  <img class="arrow" src="../../public/images/factArrowIcon.svg" />
</article>

<style define:vars={{ gold }}>
  article {
    display: grid;
    grid-template-columns: 70px auto 45px;
    grid-template-rows: auto auto;
    width: 300px;
    /* gap: 10px; */
    .tittle {
      grid-column: 2/3;
      font-size: 56px;
    }
    .text {
      grid-column: 2/3;
      font-size: 16px;
      color: #777;
      font-weight: bold;
    }
  }
  img {
    width: 60px;
    grid-row: 1/3;
    grid-column: 1/2;
    align-self: center;
    padding-right: 10px;
  }
  .arrow {
    width: 45px;
    grid-column: 3/4;
    grid-row: 1/3;
    align-self: center;
    padding-right: 2px;
  }
</style>
