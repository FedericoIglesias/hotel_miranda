---
import { gold } from "../layouts/Layout.astro";
const { number, img } = Astro.props;
---

<article>
  <img src={img} alt="" />
  <p class="number">{number}</p>
  <h6>Have High Raiting</h6>
  <p class="description">
    Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
    tempor incididunt ut labore et dolore magna.
  </p>
</article>

<style define:vars={{ gold }}>
  article {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto auto;
    width: 270px;
    height: 300px;
    padding: 5px;
    img {
      grid-row: 1/2;
      grid-column: 1/2;
      width: 80px;
      translate: 0px 50px;
    }
    .number {
      grid-row: 1/2;
      grid-column: 2/3;
      font-size: 112px;
      color: var(--gold);
      opacity: 0.1;
      translate: 10px 0px;
    }
    h6 {
      grid-row: 2/3;
      grid-column: 1/3;
      font-size: 32px;
      font-family: serif;
      font-weight: lighter;
      align-self: center;
    }
    .description {
      grid-row: 3/4;
      grid-column: 1/3;
    }
  }
</style>
