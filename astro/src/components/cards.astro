---
import { gold } from "../layouts/Layout.astro";
---

<article>
  <img src="" alt="" />
  <p class="number">01</p>
  <title>Have High Raiting</title>
  <p class="description">
    Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
    tempor incididunt ut labore et dolore magna..
  </p>
</article>

<style define:vars={{ gold }}>
  article {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto auto;
    width: 300px;
    height: 300px;
    img {
      grid-row: 1/2;
      grid-column: 1/2;
    }
    .number {
      grid-row: 1/2;
      grid-column: 2/3;
    }
    title {
      grid-row: 2/3;
      grid-column: 1/3;
    }
    .description {
      grid-row: 3/4;
      grid-column: 1/3;
    }
  }
</style>
