---
import { gold } from "../layouts/Layout.astro";

const { img, text, info, number } = Astro.props;
---

<article>
  <img src={img} alt={text} />
  <p class="">{text}</p>
  <p class="">{info}</p>
  <div><p>{number}</p></div>
</article>

<style define:vars={{ gold }}>
  article {
    display: grid;
    grid-template-columns: 60px 150px 80px;
    grid-template-rows: 1fr 1fr;
    position: relative;
    align-self: center;
    justify-self: center;
    padding: 5px;

    img {
      grid-column: 1/2;
      grid-row: 1/3;
      align-self: center;
    }
    p {
      padding-left: 5px;
      align-self: center;
      grid-column: 2/3;
    }
    div {
      /* position: absolute; */
      grid-row: 1/3;
      grid-column: 3/4;
      font-size: 72px;
      color: var(--gold);
      opacity: 0.3;
    }
  }
  article:hover {
    box-shadow: 1px 1px 3px 0px var(--gold);
  }
  @media (min-width: 768px) {
    article {
      padding: 10px;
      div {
        transform: scale(1.2);
      }
    }
  }
</style>
