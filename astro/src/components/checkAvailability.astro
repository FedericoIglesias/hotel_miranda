---
import { gold } from "../layouts/Layout.astro";
import GoldButton from "./goldButton.astro";
---

<form>
  <section>
    <div>
      <label>Arrival Date</label>
      <!-- <img src="../../public/images/calendar.svg" alt="calendar" /> -->
      <input type="date" />
    </div>
    <div>
      <label>Departure Date</label>
      <!-- <img src="../../public/images/calendar.svg" alt="calendar" /> -->
      <input type="date" />
    </div>
    <GoldButton>Check Availability</GoldButton>
  </section>
</form>

<style define:vars={{ gold }}>
  section {
    background-color: #000;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    align-items: center;
    padding: 50px 0px;
    div {
      display: flex;
      flex-direction: column;
      width: 100%;
      max-width: 300px;
      color: white;
      font-weight: bold;
      padding-bottom: 10px;
      label {
        grid-column: 1/3;
        grid-row: 1/2;
        padding: 10px 0px;
      }
      input {
        border: none;
        outline: none;
        background-color: black;
        border-bottom: 2px solid var(--gold);
        color: #666;
        font:
          700 16px "Archivo",
          sans-serif;

        padding-bottom: 5px;
        position: relative;
        padding-left: 30px;
      }
      input[type="date"]::-webkit-calendar-picker-indicator {
        background: url("../../public/images/calendaricon.svg") no-repeat center;
        position: absolute;
        left: 0;
      }
    }
  }
</style>
