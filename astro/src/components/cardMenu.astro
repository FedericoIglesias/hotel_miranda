---
const { img1, title1, img2, title2, img3, title3 } = Astro.props;
---

<section>
  <article>
    <img src={img1} alt="" />
    <p class="tittle">{title1}</p>
    <p class="text">
      Lorem ipsum dolor sit amet, consectetur adip isicing elit, sed do eiusmod
      tempor.
    </p>
    <img class="arrow" src="../../public/images/factArrowIcon.svg" />
  </article>
  <article>
    <img src={img2} alt="" />
    <p class="tittle">{title2}</p>
    <p class="text">
      Lorem ipsum dolor sit amet, consectetur adip isicing elit, sed do eiusmod
      tempor.
    </p>
    <img class="arrow" src="../../public/images/factArrowIcon.svg" />
  </article>
  <article>
    <img src={img3} alt="" />
    <p class="tittle">{title3}</p>
    <p class="text">
      Lorem ipsum dolor sit amet, consectetur adip isicing elit, sed do eiusmod
      tempor.
    </p>
    <img class="arrow" src="../../public/images/factArrowIcon.svg" />
  </article>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  article {
    display: grid;
    grid-template-columns: 120px auto;
    grid-template-rows: auto auto;
    max-width: 400px;
    font-weight: 100;
    .tittle {
      grid-column: 2/3;
      padding-left: 15px;
      padding-top: 1px;
      font-size: 24px;
    }
    .text {
      grid-column: 2/3;
      padding-left: 15px;
    }
  }
  img {
    width: 120px;
    grid-row: 1/3;
    grid-column: 1/2;
  }
  .arrow {
    width: 100%;
    grid-column: 3/4;
    grid-row: 1/3;
    align-self: center;
    padding-right: 2px;
    display: none;
  }
  article:hover {
    background-color: #222;
    color: white;
  }
  @media screen and (min-width: 1024px) {
    article {
      grid-template-columns: 120px auto 30px;
    }
    article:hover {
      .arrow {
        display: block;
        padding-right: 1px;
      }
    }
  }
</style>
